<div class="container-fluid">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bookreaper-navbar" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand custom-navbar" href="/">BookReaper</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bookreaper-navbar">




                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/about" class="glyphicon glyphicon-info-sign"></a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{user.name}} <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/profile">Profile</a></li>
                            <li><a href="#">Acount</a></li>
                            <li><a href="#">Orders</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="/logout">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <div class="container-fluid">
        <h2>Cart</h2>
        <div class="row">
            <div class="col-sm-3">


            </div>
            <div class="col-sm-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">Orders</div>

                    <div class="panel-body">
                        <table class="table table-hover table-bordered">
                            <thead>
                            <tr>
                                <th>S.No.</th>
                                <th>Products</th>
                                <th>Price</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each orders}}
                                <tr>
                                    <td>{{@index}}</td>
                                    <td>
                                        <p>{{products}}</p>
                                    </td>
                                    <td >{{price}}</td>
                                </tr>
                            {{/each}}

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <div class="col-sm-3">
                <a class="btn btn-success btn-block" href="/shop">Continue Shopping</a>
            </div>
        </div>
    </div>
    <div class="hiddenForm">
        <form method="post" action="/shop" id="filterForm">
            <input type="text" id="filter" name="filter" value=""/>
            <input type="text" id="criteria" name="criteria" value="title"/>
        </form>
        <form method="post" action="/shop/addtocart" id="addtocartForm">
            <input type="text" id="bookId" name="bookId" value=""/>
        </form>
        <form method="get" action="/profile" id="refreshForm">
            <input type="text" name="saved" value="true"/>
        </form>
    </div>
</div>